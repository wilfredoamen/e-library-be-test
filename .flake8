[flake8]
# Allow longer lines (PEP8 default is 79, but modern projects use 100–120)
max-line-length = 150

# Ignore rules that conflict with common practices or formatters
ignore = E203, W503

# Exclude folders that don’t need linting
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    venv,
    migrations

# Optional: set a complexity threshold (warns on very complex functions)
max-complexity = 10